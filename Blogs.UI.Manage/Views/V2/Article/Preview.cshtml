    <script src="http://static.kecq.com/js/jquery/jquery.lazyload.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#articleContent img").lazyload({
                effect: "fadeIn"
            });

            //$("img").error(function () {
            //    $(this).attr('src', null);
            //    $(this).attr('src', "http://static.kecq.com/images/common/imgerror.jpg");
            //});
        })

      
        $(window).load(function () {
            $('img').each(function () {
                if (!this.complete || typeof this.naturalWidth == "undefined" || this.naturalWidth == 0) {
                    this.src = 'http://static.kecq.com/images/common/imgerror.jpg';
                }
            });
        });

        $("#font_small").click(function () {
            $("#articleContent").css("font-size", "16px");
            $("#articleContent p").css("font-size", "16px");
            $("#articleContent span").css("font-size", "16px");
            $("#articleContent br").css("font-size", "16px");
        });

        $("#font_middle").click(function () {
            $("#articleContent").css("font-size", "24px");
            $("#articleContent p").css("font-size", "24px");
            $("#articleContent span").css("font-size", "24px");
            $("#articleContent br").css("font-size", "24px");
        });

        $("#font_big").click(function () {
            $("#articleContent").css("font-size", "32px");
            $("#articleContent p").css("font-size", "32px");
            $("#articleContent span").css("font-size", "32px");
            $("#articleContent br").css("font-size", "32px");
        });
    </script>
</body>
</html>
