@model Blogs.UI.Manage.ViewModel.ArticlePreviewViewModel
@{
    Layout = null;
}


<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>文章预览-@Model.Article.articleTitle</title>
    <script type="text/javascript" src="http://static.kecq.com/js/jquery-1.12.4.min.js"></script>
    <link href="http://static.kecq.com/style/bootstrap-3.3.5/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <h3 class="text-center">@Model.Article.articleTitle</h3>
        <h5 class="text-center">
            来源:@Model.Article.articleSource&nbsp;
            作者:@Model.Article.articleAuthor&nbsp;
            原文链接:<a href="@Model.Article.articleSourceUrl" target="_blank">@Model.Article.articleSourceUrl&nbsp;</a>
            时间:@Model.Article.articleDatetime&nbsp;
            阅读(0)&nbsp;
            评论(0)&nbsp;
            <a id="font_small">小</a>&nbsp;
            <a id="font_middle">中</a>&nbsp;
            <a id="font_big">大</a>&nbsp;
        </h5>
        <hr />
        <div id="articleContent" style='font:18px/32px "Microsoft Yahei"'>
            <!--正文开始-->

            @(new HtmlString(Model.Content))

            <!--正文结束-->
        </div>

    </div>

    <!-- mw_syntaxhighlighter ver.3.0.83 Begin -->
